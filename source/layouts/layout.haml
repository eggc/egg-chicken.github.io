!!! html
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %title= current_page.data.title || "Eggchicken Laboratory"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css"
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Ubuntu"
    = stylesheet_link_tag "normalize", "all"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"
    = javascript_include_tag "all"
  %body{ class: page_classes }
    #wrap
      #header
        %h1
          %a{ href: "/", style: "color: initial;" } Eggchicken Laboratory
      #main= yield
      #footer
        %a{ href: "https://github.com/egg-chicken" }
          %i.fa.fa-2x.fa-github-square
        %a{ href: "https://twitter.com/egg_chicken" }
          %i.fa.fa-2x.fa-twitter-square
      #copyright
        (c) 2014 eggchicken


